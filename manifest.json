{
  "manifest_version": 2,
  "name": "Weblio Anki Interceptor",
  "version": "1.0",
  "permissions": [
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "https://uwl.weblio.jp/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": [
      "background.js",
      "add-example.js",
      "ankiconnect.js",
      "deck-name.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  }
}
