{
  "manifest_version": 2,
  "name": "Weblio Anki Interceptor",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://uwl.weblio.jp/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
